from flask import Blueprint, jsonify, request
from utils.get_recommendation import get_recommendation

recommendation = Blueprint('api/recommendation', __name__, url_prefix='/api/recommendation')

@recommendation.route('/recommendation', methods=['GET'])
def recommendation():
    schedule = request.args.get('schedule', default=None, type=str)
    time = request.args.get('time', default=None, type=int)
    dist = request.args.get('dist', default=None, type=int)
    task = request.args.get('task', default=None, type=int)
    duration = request.args.get('duration', default=None, type=int)
    if any(x is None for x in [schedule, time, dist, task, duration]):
        return jsonify({'error': 'Missing required parameters'}), 400
    return jsonify({'recommendation': get_recommendation(schedule, time, dist, task, duration)})